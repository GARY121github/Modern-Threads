<% layout('layouts/boilerplate') -%>

    <div class="container mt-4">
        <h1>Cart</h1>
        <div class="row">
            <div class="col-md-8">
                <%for(let item of cart){%>
                    <div class="card mb-3 p-2">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="<%=item.productId.image%>" class="img-fluid rounded" alt="...">
                            </div>
                            <div class="col-md-8 ">
                                <div class="card-body">

                                    <form action="/cart/<%=item.productId._id%>/delete?_method=DELETE" method="post"
                                        class="float-end mt-2" style="cursor:pointer;">
                                        <button class="fs-4" type="submit" style="border:none; background:none;">
                                            <i class="fa-solid fa-trash" style="color: #f00000;"></i>
                                        </button>
                                    </form>
                                    <h2 class="card-title">
                                        <%=item.productId.name.toUpperCase()%>
                                    </h2>
                                    <p class="card-text">
                                        Size : <span class="text-muted">Medium</span>
                                    </p>

                                    <p class="card-text">
                                        Color : <span class="text-muted">Black</span>
                                    </p>
                                    <h3 class="fs-2">$ <%=item.productId.price%>
                                    </h3>

                                    <div class="rounded-pill d-flex justify-content-around p-1 mt-5 align-items-center"
                                        style="width: 20%; background-color:#F0F0F0;">
                                        <span class="fw-bold" id="add" style="cursor:pointer;"><i
                                                class="fa-solid fa-plus"></i></span>
                                        <p class="mb-0" id="number-of-items">
                                            <%=item.quantity%>
                                        </p>
                                        <span class="fw-bold" id="sub" style="cursor:pointer;"><i
                                                class="fa-solid fa-minus"></i></span>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                    <%}%>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">

                        <!-- Order Summary Card -->
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">Order Summary</h5>
                            </div>
                            <div class="card-body">

                                <!-- Product List -->
                                <ul class="list-group">

                                    <% for(let item of cart){ %>
                                        <!-- Product 1 -->
                                        <li class="list-group-item">
                                            <div class="d-flex justify-content-between">
                                                <span>
                                                    <%=item.productId.name.toUpperCase() %>
                                                </span>
                                                <span style="color:red;">
                                                    $<%= item.productId.price * item.quantity%>
                                                </span>
                                            </div>
                                        </li>
                                        <%}%>
                                </ul>

                                <!-- Order Total -->
                                <h4 class="card-text mt-3 text-center"><strong>Total: $</strong>
                                    <span id="total">
                                        <%= total %>
                                    </span>
                                </h4>

                                <!-- Checkout Button -->
                                <button type="button" id="checkout" class="btn w-100 p-2 rounded-pill btn-block mt-4"
                                    style="background-color: black; color: white;">Proceed to
                                    Checkout <i class="fa-solid fa-right-long fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </main>

            <script>
                const add = document.getElementById('add');
                const sub = document.getElementById('sub');
                const numberOfItems = document.getElementById('number-of-items');
                const checkout = document.getElementById('checkout');

                add.addEventListener('click', () => {
                    numberOfItems.innerText = parseInt(numberOfItems.innerText) + 1;
                });

                sub.addEventListener('click', () => {
                    if (parseInt(numberOfItems.innerText) > 1) {
                        numberOfItems.innerText = parseInt(numberOfItems.innerText) - 1;
                    }
                });

                checkout.addEventListener('click', () => {

                    console.log(parseInt(document.getElementById('total').innerText));

                    axios.post('/payment/stripe', {
                        total: parseInt(document.getElementById('total').innerText),
                    })
                        .then((res) => {
                            console.log(res);
                            window.location.href = '/cart';
                        })
                        .catch((err) => {
                            console.log(err);
                        });
                });
            </script>